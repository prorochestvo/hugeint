# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space

[**.go]
indent_size = 2
insert_final_newline = true
max_line_length = 256
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# tab indentation (no size specified)
[Makefile]
indent_style = tab
